{
  "name": "stack-ai-picker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit -p tsconfig.typecheck.json",
    "test": "vitest",
    "test:run": "vitest run",
    "check": "npm run lint && npm run type-check && npm run test:run",
    "audit:ci": "lhci autorun --upload.target=temporary-public-storage",
    "badges:generate": "node scripts/generate-lighthouse-badges.js",
    "audit:lighthouse": "echo 'Build: npm run build && npm run start' && echo 'Then: Chrome DevTools > Lighthouse > Performance + Best Practices > Analyze' && echo 'Targets: Performance >95, Best Practices >95, CLS=0'",
    "docs:generate": "typedoc && echo 'Docs generated in docs/api-reference'",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typedoc": "^0.28.16",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
